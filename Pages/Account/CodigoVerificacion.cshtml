@page
@model ProyectoProcesosExperienciaV1.Pages.Account.CodigoVerificacionModel
@{
    ViewData["Title"] = "Código de verificación - ManaSys";
    ViewData["Step"] = "2";
}

<style>
    .progress-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .progress-step {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #ccc;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .progress-step.active {
        background-color: #0d6efd;
    }

    .progress-line {
        height: 4px;
        width: 40px;
        background-color: #ccc;
        border-radius: 2px;
    }

    .progress-line.filled {
        background-color: #0d6efd;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="progress-wrapper">
        <div class="progress-step @(ViewData["Step"] as string == "1" ? "active" : "")">1</div>
        <div class="progress-line @(ViewData["Step"] as string == "2" || ViewData["Step"] as string == "3" ? "filled" : "")"></div>
        <div class="progress-step @(ViewData["Step"] as string == "2" ? "active" : "")">2</div>
        <div class="progress-line @(ViewData["Step"] as string == "3" ? "filled" : "")"></div>
        <div class="progress-step @(ViewData["Step"] as string == "3" ? "active" : "")">3</div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2>Verifica tu correo</h2>
            <p class="text-muted">Te hemos enviado un código de 6 dígitos</p>

            <form method="post" class="mt-4">
                <div class="d-flex justify-content-center gap-2">
                    @for (int i = 0; i < 6; i++)
                    {
                        <input type="text" maxlength="1" class="form-control text-center" style="width: 50px;" />
                    }
                </div>

                <a href="/Account/NuevaContrasena" class="btn btn-success mt-4 w-100">Continuar</a>
            </form>

            <div class="mt-3">
                <a href="/Account/Login">← Cancelar y volver</a>
            </div>
        </div>
    </div>
</div>
