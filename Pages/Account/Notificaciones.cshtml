@page
@model ProyectoProcesosExperienciaV1.Pages.Account.NotificacionesModel
@{
    ViewData["Title"] = "Notificaciones";
}

<link rel="stylesheet" href="~/css/empleado-configuracion.css" />

<div class="container mt-5">
    <!-- ðŸ§­ Migas de pan -->
    <nav aria-label="breadcrumb" class="breadcrumb-wrapper mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Empleado/Dashboard">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Notificaciones</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="m-0">Centro de Notificaciones</h5>
        </div>
        <div class="card-body">
            @if (Model.Notificaciones != null && Model.Notificaciones.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var noti in Model.Notificaciones)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">@noti.Titulo</div>
                                @noti.Mensaje
                            </div>
                            <span class="badge bg-secondary rounded-pill">@noti.Fecha.ToString("dd/MM/yyyy")</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="text-center text-muted">
                    <p>No tienes notificaciones nuevas en este momento.</p>
                </div>
            }
        </div>
    </div>
</div>
