@page
@model ProyectoProcesosExperienciaV1.Pages.Account.OlvidoModel
@{
    ViewData["Title"] = "Recuperar contraseña - ManaSys";
    ViewData["Step"] = "1";
}

<style>
    .progress-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .progress-step {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #ccc;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .progress-step.active {
        background-color: #0d6efd;
    }

    .progress-line {
        height: 4px;
        width: 40px;
        background-color: #ccc;
        border-radius: 2px;
    }

    .progress-line.filled {
        background-color: #0d6efd;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="progress-wrapper">
        <div class="progress-step @(ViewData["Step"] as string == "1" ? "active" : "")">1</div>
        <div class="progress-line @(ViewData["Step"] as string == "2" || ViewData["Step"] as string == "3" ? "filled" : "")"></div>
        <div class="progress-step @(ViewData["Step"] as string == "2" ? "active" : "")">2</div>
        <div class="progress-line @(ViewData["Step"] as string == "3" ? "filled" : "")"></div>
        <div class="progress-step @(ViewData["Step"] as string == "3" ? "active" : "")">3</div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h2>¿Olvidaste tu contraseña?</h2>
                <p class="text-muted">Ingresa tu correo y te enviaremos un código de verificación</p>
            </div>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" placeholder="ejemplo@correo.com" />
                </div>

                <a href="/Account/CodigoVerificacion" class="btn btn-primary w-100">Enviar código</a>
            </form>

            <div class="text-center mt-3">
                <a href="/Account/Login">← Volver al inicio de sesión</a>
            </div>
        </div>
    </div>
</div>
